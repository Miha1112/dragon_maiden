<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".TopResult">
    <ImageView
        android:id="@+id/bakc_to_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="backToMenu_sc"
        android:src="@drawable/back_btn"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14pt"
        android:text="Score" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rusult_block"
        android:layout_height="wrap_content"
        android:background="@drawable/score_bg"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="14pt"
            android:text="Score" />
        <TextView
            android:id="@+id/result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="14pt"
            android:text="Score 1" />
        <TextView
            android:id="@+id/result3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="14pt"
            android:text="Score 2" />

    </RelativeLayout>

</RelativeLayout>